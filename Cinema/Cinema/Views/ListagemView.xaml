<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Cinema"
             Title="Cinema"
             x:Class="Cinema.Views.ListagemView">

    <StackLayout Padding="25">

        <ListView x:Name="listViewFilmes" ItemsSource="{Binding Filmes}" ItemTapped="listViewFilmes_ItemTapped">

            <ListView.ItemTemplate>


                <DataTemplate>


                    <ViewCell>
                        <ViewCell.View>

                            <Label FontSize="20" FormattedText="{Binding FilmeLabel}"></Label>

                        </ViewCell.View>


                    </ViewCell>



                </DataTemplate>


            </ListView.ItemTemplate>



        </ListView>

    </StackLayout>



</ContentPage>